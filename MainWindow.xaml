<Window x:Class="CopilotExtensionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopilotExtensionApp"
        xmlns:vm="clr-namespace:CopilotExtensionApp.ViewModels"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:conv="clr-namespace:CopilotExtensionApp.Converters"
        mc:Ignorable="d"
        Title="Copilot File Explorer" Height="800" Width="1200">
    
    <Window.Resources>
        <conv:BoolToIconConverter x:Key="BoolToIconConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左側：Copilot WebView2 -->
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Microsoft Copilot" 
                          FontSize="16" FontWeight="Bold" 
                          Margin="10" Background="LightBlue" Padding="5"/>
                
                <wv2:WebView2 x:Name="CopilotWebView" Grid.Row="1" 
                         Source="https://copilot.microsoft.com"/>
            </Grid>
        </Border>
        
        <!-- 分割線 -->
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" 
                     Background="LightGray" ShowsPreview="True"/>
        
        <!-- 右側：ファイルエクスプローラ WebView2 -->
        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- タイトル -->
                <TextBlock Grid.Row="0" Text="ファイルエクスプローラ" 
                          FontSize="16" FontWeight="Bold" 
                          Margin="10" Background="LightGreen" Padding="5"/>
                
                <!-- パスとボタン -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                    <TextBlock Text="{Binding CurrentPath.Value}" 
                              Width="300" Margin="0,0,10,0" 
                              VerticalAlignment="Center" 
                              TextTrimming="CharacterEllipsis"/>
                    <Button Content="フォルダ選択" Click="SelectFolderButton_Click" 
                           Width="80" Margin="0,0,10,0"/>
                    <Button Content="更新" Click="RefreshFilesButton_Click" 
                           Width="60" Margin="0,0,10,0"/>
                    <Button Content="Copilotに送信" Click="SendToCopilotButton_Click" 
                           Width="100"/>
                </StackPanel>
                
                <!-- FancyTreeファイルエクスプローラ WebView2 -->
                <wv2:WebView2 Grid.Row="2" x:Name="FileExplorerWebView" 
                              Margin="10"/>
                
                <!-- ステータスバー -->
                <StatusBar Grid.Row="3">
                    <StatusBarItem>
                        <TextBlock Text="{Binding StatusMessage.Value}"/>
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </Border>
    </Grid>
</Window>
